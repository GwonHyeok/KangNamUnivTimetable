<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/extratime_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/actionbar"
        android:gravity="center"
        android:text="남은시간"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:weightSum="10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/extratime_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:src="@drawable/bg_clock" />

            <TextView
                android:id="@+id/extratime_extratime_tv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1일 2시간 26분"
                android:textColor="@color/fontcolor_main"
                android:textSize="38sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="6"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c7d2df" />

            <TextView
                android:id="@+id/extratime_info_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="수업정보"
                android:textColor="@color/fontcolor_main"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c7d2df" />

            <TextView
                android:id="@+id/extratime_subject_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="강의명: C프로그래밍 1"
                android:textColor="@color/fontcolor_main"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/extratime_class_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="강의실: 이공관312"
                android:textColor="@color/fontcolor_main"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/extratime_time_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="강의시간: 13:40 ~ 17:25"
                android:textColor="@color/fontcolor_main"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c7d2df" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/extratime_share_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_share_et" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/extratime_cornfirm_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_cornfirm_et" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>