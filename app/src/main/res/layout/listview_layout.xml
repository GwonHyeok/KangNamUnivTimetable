<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listview_background" >

    <TextView
        android:id="@+id/listview_textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="6dp"
        android:text="시간"
        android:textColor="@color/fontcolor_main"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/listview_textview_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/listview_textview_time"
        android:layout_below="@id/listview_textview_time"
        android:paddingLeft="6dp"
        android:text="강의실"
        android:textColor="@color/fontcolor_main"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/listview_textview_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingRight="6dp"
        android:text="과목"
        android:textColor="@color/fontcolor_main" />

    <View
        android:id="@+id/listview_ColorView"
        android:layout_width="14dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/listview_textview_class"
        android:layout_alignParentRight="true"
        android:background="#5a8ed1" />

</RelativeLayout>